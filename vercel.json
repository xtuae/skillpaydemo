{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "env": {
    "DATABASE_URL": "@database_url",
    "NEXT_PUBLIC_SKILLPAY_AUTH_ID": "@next_public_skillpay_auth_id",
    "NEXT_PUBLIC_SKILLPAY_AUTH_KEY": "@next_public_skillpay_auth_key",
    "NEXT_PUBLIC_SKILLPAY_API_URL": "@next_public_skillpay_api_url",
    "NEXT_PUBLIC_APP_URL": "@next_public_app_url"
  },
  "functions": {
    "app/api/payment/init/route.ts": {
      "maxDuration": 30
    },
    "app/api/payment/status/route.ts": {
      "maxDuration": 30
    },
    "app/api/payment/callback/route.ts": {
      "maxDuration": 30
    },
    "app/api/transactions/route.ts": {
      "maxDuration": 30
    }
  }
}
